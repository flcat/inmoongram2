<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#AAAAAA">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/userphoto_item"/>
    <TextView
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:id="@+id/username_item"
        android:hint="username"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="#000000"/>
    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/options_item"
        android:src="@drawable/cancel_ic" />
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:id="@+id/content_photo_item"
        android:layout_gravity="center"
        android:scaleType="fitXY"
        />
    <!-- android:background="@drawable/bp" -->
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp">
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/likes"
            android:src="@drawable/cancel_ic"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/reply"
            android:src="@drawable/cancel_ic"/>
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/shared"
            android:src="@drawable/cancel_ic"/>
    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/likes_number_of"
        android:hint="좋아요 개수"
        android:maxLines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:textColor="#000000"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/username_with_contents_item"
            android:background="#FF2222"
            android:textColor="#FFFFFF"
            android:text="닉네임"
            android:gravity="center"
            android:visibility="gone"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/contents_item"
            android:hint="내용"
            android:maxLines="2"
            android:ellipsize="end"
            android:textSize="16sp"
            android:textColor="#000000"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 보기"
            android:textColor="#AAAAAA"
            android:id="@+id/more_contents_view_item"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>